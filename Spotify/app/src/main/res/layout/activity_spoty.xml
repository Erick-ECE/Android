<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erick.spotify.Spoty"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/down"
            android:layout_margin="10dp"
            android:id="@+id/down"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAYING FROM ALBUM"
            android:textSize="10dp"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:id="@+id/src_ttl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/src_ttl"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:text="Men Amongst Mountains"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/serch"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/wiky"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/plus"
            android:layout_margin="10dp"
            android:id="@+id/add"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wish I Knew "
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:id="@+id/ttl"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ttl"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:text="Men Amongst Mountains" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/options"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

